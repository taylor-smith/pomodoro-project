{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "sourceMap": true,
        
        // Some random stuff
        "experimentalDecorators": true, // For MobX decorators
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true, // Have to explicitly say that something is an "any" type
        "noImplicitReturns": true,
        "noImplicitThis": true,

        "outDir": "../../private",
        "rootDir": "../",
        "sourceRoot": "../", // Prefix to path of original Typescript files
        "strictNullChecks": true // New thing in typescript 2.0
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}